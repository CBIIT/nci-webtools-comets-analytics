version: '3'
services:
  comets:
    image: "cbiitss/comets:base0"
    volumes:
      - ./run/app:/deploy/app
      - ./run/logs:/deploy/logs
    container_name: comets
    depends_on:
      - activemq
    links:
      - activemq
    ports:
      - '8100:8000'
    healthcheck:
      test: ['CMD', 'curl', '-f', 'http://localhost']
  activemq:
    image: "webcenter/activemq:latest"
    container_name: activemq
    expose:
      - '61613'
    ports:
      - '8161:8161'
      - '61613:61613'
